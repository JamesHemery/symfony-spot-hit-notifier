{
    "name": "yield/symfony-spot-hit-notifier",
    "type": "symfony-bundle",
    "description": "Spot-Hit integration for Symfony Notifier.",
    "keywords": ["sms", "Spot-Hit", "notifier", "symfony"],
    "homepage": "https://github.com/YieldStudio/symfony-spot-hit-notifier",
    "license": "MIT",
    "authors": [
        {
            "name": "Yield Studio",
            "email": "contact@yieldstudio.fr",
            "homepage": "https://yieldstudio.fr"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "symfony/http-client": "^4.3|^5.0",
        "symfony/notifier": "^5.1|^5.2",
        "symfony/event-dispatcher-contracts": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5 || ^7",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": { "YieldStudio\\Notifier\\SpotHit\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev"
}
